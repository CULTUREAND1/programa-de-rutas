#include <stdio.h>

int main() {
    float base_mayor, base_menor, altura, area_superior, area_inferior, area_total;

    // Solicitar al usuario los datos necesarios
    printf("Ingrese la longitud de la base mayor del trapecio: ");
    scanf("%f", &base_mayor);

    printf("Ingrese la longitud de la base menor del trapecio: ");
    scanf("%f", &base_menor);

    printf("Ingrese la altura del trapecio: ");
    scanf("%f", &altura);
    
    area_total = ((altura/2)*(base_mayor+base_menor));

    // Mostrar el resultado
    printf("El Ã¡rea del trapezoide es: %.1f\n", area_total);

    return 0;
}
