#include <stdio.h>

int main() {
    float lado_a, lado_b, altura, area;

    // Solicitar al usuario los datos necesarios
    printf("Ingrese la longitud del lado A del trapecio: ");
    scanf("%f", &lado_a);

    printf("Ingrese la longitud del lado B del trapecio: ");
    scanf("%f", &lado_b);

    printf("Ingrese la altura del trapecio: ");
    scanf("%f", &altura);

    // Calcular el área del trapecio
    area = (lado_a + lado_b) * altura / 2;

    // Mostrar el resultado
    printf("El área del trapecio es: %.2f\n", area);

    return 0;
}
